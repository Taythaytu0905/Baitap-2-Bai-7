extends ../layouts/common.pug

block content      
    h2 Create transaction
    form(action="/transactions/create" method="POST")
        div
            label Choose user
            select(name="userId" class="form-control")
                each user in users
                    option( value=user.id)=user.name
        div
            label Choose book
            select(name="bookId" class="form-control")
                each book in books
                    option(value=book.id)=book.title
        div 
            label Quantity
            input(type="number" name="quantity" class="form-control")
        div
            button(type="submit" class="btn-primary btn mt-2") Create
