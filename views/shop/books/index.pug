extends ../layouts/common.pug

block content
    h2.d-flex.align-items-center
        span.mr-3 Books
        a.btn.btn-primary(href="/shop/books/create") New Book
    table.table
        tr
            th Book Cover
            th Title
            th Descriptions
            th Delete
            th Update
        each book in shopList
            tr
                td
                    img(src=book.coverUrl, width="48")
                td= book.title
                td= book.description
                td 
                    a.btn.btn-light(href="/shop/books/" +book.id +"/delete") Delete
                td
                    a.btn.btn-light(href="/shop/books/" +book.id + "/update") Update
    include ../layouts/pagination.pug 